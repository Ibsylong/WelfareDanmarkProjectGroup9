@{
    Layout = "_Layout";
}

@model IEnumerable<WelfareDanmarkProjectGroup9.Models.Patient>
@*@Html.Partial("_counter")*@

<div class="sidebar">
    <ul>
        <li><a href="@Url.Action("Index", "Home")" class="a_button"><img src="~/images/home.png" /></a></li>
        <li><div class="arrow-right"></div> <a href="@Url.Action("Index", "Patient")" class="a_button"><img src="~/images/user.png" /></a></li>
        <li><a href="@Url.Action("Index", "Chat")" class="a_button"><img src="~/images/chat.png" /></a></li>
        <li><a href="#" class="a_button"><img src="~/images/calendar.png" /></a></li>
        <li><a href="#" class="a_button"><img src="~/images/reports.png" /></a></li>
    </ul>
</div>

<div class="maincontent">
    <h1>Patients <span>Total:@Model.Count()</span></h1>

    <div id="patients-table">

        @foreach (var patient in Model)
        {
            <img src="#" />

            <div class="patients-info">
                <h2>@patient.Firstname @patient.Lastname</h2>
                <ul>
                    <li>@patient.Gender, @patient.Age</li>
                    <li>@patient.TypeOfDementia</li>
                </ul>
            </div>

            <div class="patients-cg-info">
                <h2>Caregiver</h2>

                <ul>
                    <li>@patient.CaregiverName</li>
                    <li>@patient.CaregiverPhone</li>
                </ul>

                <img src="#" />
            </div>

            <div class="patients-options">
                <ul>
                    <li><a href="#">&cross;</a></li>
                </ul>
            </div>
        }



    </div>
</div>
